                  <MenuItem fx:id="saveItem" mnemonicParsing="false" onAction="#handleMenuAction" text="Print" />
                  <MenuItem fx:id="propertiesItem" mnemonicParsing="false" onAction="#handleMenuAction" text="Properties" />
                    </items>
                </Menu>
                <Menu fx:id="editMenu" mnemonicParsing="false" onAction="#handleMenuAction" text="Edit">
                    <items>
                        <MenuItem fx:id="copyItem" mnemonicParsing="false" onAction="#handleMenuAction" text="Copy" />
                        <MenuItem fx:id="pasteItem" mnemonicParsing="false" onAction="#handleMenuAction" text="Paste" />
                  <MenuItem fx:id="undoItem" mnemonicParsing="false" onAction="#handleMenuAction" text="Undo" />
                  <MenuItem fx:id="redoItem" mnemonicParsing="false" onAction="#handleMenuAction" text="Redo" />
